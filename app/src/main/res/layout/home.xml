<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:id="@+id/rootLayout"
		android:background="#7E86A8FF"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".Home">
	
	<androidx.appcompat.widget.Toolbar
			android:id="@+id/home_toolbar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/colorWhite"
			android:elevation="8dp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent">
		
		
		<Button
				android:id="@+id/home_donate"
				android:layout_width="32dp"
				android:layout_height="32dp"
				android:background="@drawable/ic_coffee"/>
		
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:textSize="24sp"
				android:text="Writers Den"
				android:textColor="@color/colorBlack"
				android:layout_gravity="center"/>
		
		
		<Button
				android:id="@+id/home_share"
				android:layout_width="32dp"
				android:layout_height="32dp"
				android:background="@drawable/ic_send"
				android:layout_marginEnd="16dp"
				android:clickable="true"
				android:foreground="?attr/selectableItemBackground"
				android:layout_gravity="right"/>
	
	</androidx.appcompat.widget.Toolbar>
	
	
	<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/home_imageconst"
			android:layout_width="match_parent"
			android:layout_height="1024px"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/home_toolbar"
			app:layout_constraintBottom_toTopOf="@+id/home_itemconst">
		
		<ImageView
				android:id="@+id/home_image"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scaleType="fitXY"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"/>
	
	</androidx.constraintlayout.widget.ConstraintLayout>
	
	
	<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/home_itemconst"
			android:layout_width="match_parent"
			android:layout_height="150dp"
			android:elevation="10dp"
			android:background="@color/colorWhite"
			app:layout_constraintBottom_toBottomOf="parent">
		
		<ImageButton
				android:id="@+id/home_imagebutton"
				android:layout_width="140dp"
				android:layout_height="140dp"
				android:layout_marginStart="8dp"
				android:elevation="10dp"
				android:clickable="true"
				android:foreground="?attr/selectableItemBackground"
				android:background="@drawable/ic_image"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"/>
		
		<ImageButton
				android:id="@+id/home_textbutton"
				android:layout_width="140dp"
				android:layout_height="140dp"
				android:layout_marginEnd="8dp"
				android:elevation="10dp"
				android:clickable="true"
				android:foreground="?attr/selectableItemBackground"
				android:background="@drawable/ic_text"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"/>
	
	
	</androidx.constraintlayout.widget.ConstraintLayout>
	
	
	<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/home_recycler"
			android:layout_width="0dp"
			android:layout_height="150dp"
			android:elevation="8dp"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent">
	</androidx.recyclerview.widget.RecyclerView>
	
	
	<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/home_stylingconst"
			android:layout_width="match_parent"
			android:layout_height="150dp"
			android:elevation="8dp"
			android:background="@color/colorWhite"
			app:layout_constraintBottom_toBottomOf="parent">
		
		
		<SeekBar
				android:id="@+id/home_seekbarsize"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="8dp"
				android:layout_marginEnd="8dp"
				app:layout_constraintTop_toTopOf="parent"/>
		
		<SeekBar
				android:id="@+id/home_seekbarrotate"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="8dp"
				android:layout_marginEnd="8dp"
				app:layout_constraintTop_toTopOf="parent"/>
		
		<Button
				android:id="@+id/home_textcolor"
				android:layout_width="90dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:layout_marginLeft="16dp"
				android:background="@color/colorBlack"
				android:text="Color"
				android:textColor="@color/colorWhite"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/home_seekbarrotate"/>
		
		<Button
				android:id="@+id/home_textsize"
				android:layout_width="90dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:background="@color/colorBlack"
				android:text="Size"
				android:textColor="@color/colorWhite"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/home_seekbarrotate"/>
		
		
		<Button
				android:id="@+id/home_textfont"
				android:layout_width="90dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:layout_marginRight="16dp"
				android:background="@color/colorBlack"
				android:text="Font"
				android:textColor="@color/colorWhite"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/home_seekbarrotate"/>
		
		
		<Button
				android:id="@+id/home_textremove"
				android:layout_width="90dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="16dp"
				android:layout_marginStart="16dp"
				android:background="@color/colorBlack"
				android:text="Remove"
				android:textColor="@color/colorWhite"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/home_textsize"/>
		
		
		<Button
				android:id="@+id/home_edittext"
				android:layout_width="90dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="16dp"
				android:background="@color/colorBlack"
				android:text="Edit"
				android:textColor="@color/colorWhite"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/home_textsize"/>
		
		
		<Button
				android:id="@+id/home_textrotate"
				android:layout_width="90dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="16dp"
				android:layout_marginEnd="16dp"
				android:background="@color/colorBlack"
				android:text="Rotate"
				android:textColor="@color/colorWhite"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/home_textsize"/>
	
	
	</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>